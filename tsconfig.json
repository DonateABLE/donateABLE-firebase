{
    "compilerOptions": {
        "sourceMap": true,
        "moduleResolution": "node",
        "module": "ESNext",
        "target": "es5",
        "lib": [
            "DOM",
            "ES5",
            "ScriptHost"
        ],
        "jsx": "react",
        "jsxFactory": "createElement",
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "baseUrl": "./",
        "paths": {
            "*": [
                "src/*"
            ]
        },
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true
    },
    "exclude": [
        "node_modules",
    ]
}